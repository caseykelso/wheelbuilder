<?xml version="1.0" encoding="utf-8"?>
<manifest 
      xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.kineticsproject.spokecalculator.android"
      android:versionCode="916"
      android:versionName="1.5">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> 
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> 
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
   
   
    
    <uses-sdk android:minSdkVersion="10" />
    <uses-sdk android:targetSdkVersion="14" />  
    <supports-screens android:smallScreens="false"
                      android:normalScreens="true"
                      android:largeScreens="true"
                      android:xlargeScreens="true" />
    <application android:label="@string/app_name" android:icon="@drawable/pennyfarthing" >

        <activity android:name="com.kineticsproject.spokecalculator.android.mainActivity"
                  android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.kineticsproject.spokecalculator.android.basicActivity"
                  android:label="Basic Wheel Builder"/>

        <activity android:name="com.kineticsproject.spokecalculator.android.basicRoadActivity"
                  android:label="Road Bike Wheel Builder"/>

        <activity android:name="com.kineticsproject.spokecalculator.android.basicMountainActivity"
                  android:label="Mountain Bike Wheel Builder"/>

        <activity android:name="com.kineticsproject.spokecalculator.android.basicBMXActivity"
                  android:label="BMX Wheel Builder"/>

        <activity android:name="com.kineticsproject.spokecalculator.android.advancedActivity"
                  android:label="Advanced Wheel Builder"/>

        <activity android:name="com.kineticsproject.spokecalculator.android.basicCyclocrossActivity"
                  android:label="Cyclocross Wheel Builder"/>

        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

    </application>
</manifest>

