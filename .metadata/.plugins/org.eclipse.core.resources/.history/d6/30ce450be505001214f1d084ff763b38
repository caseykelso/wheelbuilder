import static org.junit.Assert.*;

import org.junit.After;
import org.junit.Before;
import org.junit.Test;
import com.kineticsproject.spokecalculator.calculator.*;

public class basic extends SpokeCalculation
{

	private Rim   				StansOlympic26;
	private Hub 				ChrisKingUniversalDiscRearHub;
	private Wheel 				blurRearWheel;
    private Hub                ExampleHub;
    private Rim                ExampleRim;
    private Wheel              ExampleWheel;
    private final double     delta = 0.05;
	
	@Before
	public void setUp() throws Exception
	{

		ChrisKingUniversalDiscRearHub 	= new Hub(53,53,21.0,34.0, 32);
		ExampleHub                      = new Hub(38,38, 36.0, 36.0, 32);
		ExampleRim                      = new Rim(540, 0, 0);
		StansOlympic26 					= new Rim(536, 0, 0);
		blurRearWheel 					= new Wheel(StansOlympic26,ChrisKingUniversalDiscRearHub,3);
		ExampleWheel                    = new Wheel(ExampleRim, ExampleHub, 3);

	}

	@After
	public void tearDown() throws Exception
	{
		ChrisKingUniversalDiscRearHub   = null;
		StansOlympic26   				= null;
		blurRearWheel 					= null;
		StansOlympic26 					= null;
		ExampleHub                      = null;
		ExampleRim                      = null;
	}

	@Test
	public void testSpokeAngle()
	{
        assertEquals(calculateSpokeAnchorAngle(1,2), 1440.0, 0.1);

	}
	
	@Test
	public void KingUniversalonStansOlympic26_ThreeCross()
	{
		assertEquals(258.7,  blurRearWheel.calculateDriveSideSpokeLength(),  	delta);
		assertEquals(260.04, blurRearWheel.calculateNonDriveSideSpokeLength(),  delta);	
	}
	
	@Test
	public void test()
	{

		assertEquals(264.61, ExampleWheel.calculateDriveSideSpokeLength(), 		delta);


	}

}
